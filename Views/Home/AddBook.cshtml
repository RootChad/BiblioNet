@model Book
@{ Layout = "_Layout"; ViewBag.Title = "Add Book";}

<h2>Add Book <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddBook" method="post">
    <div class="form-group">
        <label for="Titre">Titre:</label>
        <input class="form-control" name="Titre" />
    </div>
    
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Reservation</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.BookID</td>
                <td>@Model.Titre</td>
                <td>@Model.Author</td>
                <td>@Model.ReleaseDate</td>
                <td>@Model.Description</td>
            </tr>
        </tbody>
    </table>
}