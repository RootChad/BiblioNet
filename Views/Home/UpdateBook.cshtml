@model Book
@{ Layout = "_Layout"; ViewBag.Title = "Update Book";}

<h2>Update Book <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="BookID"></label>
        <input class="form-control" asp-for="BookID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Titre"></label>
        <input class="form-control" asp-for="Titre" />
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input class="form-control" asp-for="Author" />
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input class="form-control" asp-for="ReleaseDate" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

